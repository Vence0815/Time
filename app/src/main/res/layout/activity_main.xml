<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_mian"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/home_bottombar_line" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="7dp">


        <RadioButton
            android:id="@+id/rb_home"
            style="@style/tabBottom"
            android:drawableTop="@drawable/tab_home_seletor"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_payticket"
            style="@style/tabBottom"
            android:drawableTop="@drawable/tab_payticket_selector"
            android:text="购票" />

        <RadioButton
            android:id="@+id/rb_shop"
            style="@style/tabBottom"
            android:drawableTop="@drawable/tab_shop_selector"
            android:text="商城" />

        <RadioButton
            android:id="@+id/rb_find"
            style="@style/tabBottom"
            android:drawableTop="@drawable/tab_discover_selector"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/tabBottom"
            android:drawableTop="@drawable/tab_user_selector"
            android:text="我的" />

    </RadioGroup>

</LinearLayout>
